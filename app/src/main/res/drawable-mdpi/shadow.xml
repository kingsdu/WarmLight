<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 第一层  上部和左部偏移一定距离-->
    <item
        android:left="0dp"
        android:top="0dp">
        <shape>
            <solid android:color="#f5f5f5" />
            <corners android:radius="8dip" />

            <stroke
                android:width="0dp"
                android:color="#f5f5f5" />
        </shape>
    </item>
    <!-- 第二层 下部和有部偏移一定距离-->
    <item
        android:bottom="0dp"
        android:right="0dp">
        <shape>
            <corners android:radius="8dip" />
            <solid android:color="#ffffff" />
            <!-- 描边 -->
            <stroke android:width="1dp" android:color="@color/gray_gray" />
        </shape>
    </item>

</layer-list>