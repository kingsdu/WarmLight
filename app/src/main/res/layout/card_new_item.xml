<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="18dp"
    android:layout_marginRight="18dp"
    android:layout_marginTop="18dp"
    android:background="@drawable/home01_bg_card"
    android:orientation="vertical"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="10dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_read_portrait"
            android:layout_width="135dp"
            android:layout_height="130dp"
            android:layout_marginRight="15dp"
            android:contentDescription="@null" />


        <!--活动标题-->
        <TextView
            android:id="@+id/tv_read_acttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/iv_read_portrait"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <!--活动内容-->
        <TextView
            android:id="@+id/tv_read_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_read_acttitle"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/iv_read_portrait"
            android:textColor="@color/gray_gray"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="10dp"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_read_startnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:maxLines="1"
            android:text=""
            android:textColor="#565656"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_read_complicationnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_read_startnum"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_read_startnum"
            android:maxLines="1"
            android:text=""
            android:textColor="#565656"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_read_commentnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_read_startnum"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_read_complicationnum"
            android:maxLines="1"
            android:text=""
            android:textColor="#565656"
            android:textSize="11sp" />
    </RelativeLayout>

</LinearLayout>
