<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical">

    <include layout="@layout/common_top" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/white"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="友约活动设置"
            android:textColor="@color/main_orange"
            android:textSize="17dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rl_date_contactpho"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shadow">

            <TextView
                android:id="@+id/tv_date_contactpho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="15dp"
                android:paddingLeft="35dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:text="咨询电话 "
                android:textColor="@color/black"
                android:textSize="17sp" />


            <EditText
                android:id="@+id/et_date_contactpho"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="33dp"
                android:paddingRight="20dp"
                android:background="@null"
                android:src="@drawable/icon_right"
                android:textColor="@color/black"
                android:hint="请输入联系电话"
                android:gravity="center|right"
                android:textColorHint="@color/gray_gray"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_date_enrollstatime"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shadow">

            <TextView
                android:id="@+id/tv_date_enrollstatime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingLeft="35dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:text="报名开始时间"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_date_enrollstashowtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_date_enrollstatime"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:textColor="@color/gray_gray"
                android:textSize="17sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_date_enrollstatime"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="134dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/tv_date_enrollstatime"
                android:src="@drawable/icon_right" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_date_enrollendtime"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shadow">

            <TextView
                android:id="@+id/tv_date_enrollendtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingLeft="35dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:text="报名截至时间"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_date_enrollendshowtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_date_enrollendtime"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:textColor="@color/gray_gray"
                android:textSize="17sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_date_enrollendtime"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="134dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/tv_date_enrollendtime"
                android:src="@drawable/icon_right" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_date_saveset"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_date_saveset"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/date_saveset_bg"
                android:text="保存设置"
                android:textColor="@color/white"
                android:textSize="18dp" />

        </RelativeLayout>
    </LinearLayout>



</LinearLayout>