<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dip"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="2dip"
            android:layout_marginTop="2dip"
            android:layout_weight="1.0"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_coordinatedate_itemTitle"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_coordinatedate_itemTitle"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="4dp"
                    android:paddingTop="3dp" />
                <TextView
                    android:id="@+id/tv_coordinatedate_itemTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/iv_coordinatedate_itemTitle"
                    android:textColor="#f243"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_coordinatedate_itemTitle"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_coordinatedate_locate"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="8dp"
                    android:paddingTop="3dp"
                    android:layout_below="@+id/tv_coordinatedate_itemTitle"/>
                <TextView
                    android:id="@+id/tv_coordinatedate_itemPlace"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#f243"
                    android:textSize="13sp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/tv_coordinatedate_itemTitle"
                    android:layout_toRightOf="@+id/iv_coordinatedate_locate" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_coordinatedate_route"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dip"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_marginTop="1dip"
            android:onClick="saveClick"
            android:layout_weight="3.0" />
    </LinearLayout>


</LinearLayout>