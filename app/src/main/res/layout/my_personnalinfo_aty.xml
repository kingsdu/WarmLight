<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAFAFA"
        android:orientation="vertical">

        <include layout="@layout/common_top"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/bg"
            android:gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_personnalinfo_circleImageView"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/musi01"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:divider="@drawable/divide_shape"
            android:orientation="vertical"
            android:showDividers="middle|end">

            <RelativeLayout
                android:id="@+id/ll_me_editname"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/tv_personnalinfo_username"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:text="昵称: "
                    android:textColor="#99CCFF"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_personnalinfo_username1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/tv_personnalinfo_username"
                    android:gravity="center"
                    android:text="XXX"
                    android:textColor="#646464"
                    android:textSize="17sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_me_editsex"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/tv_personnalinfo_sex"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:text="性别: "
                    android:textColor="#99CCFF"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_personnalinfo_sex1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/tv_personnalinfo_sex"
                    android:gravity="center"
                    android:text="XXX"
                    android:textColor="#646464"
                    android:textSize="17sp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/ll_me_editsigure"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/tv_personnalinfo_sig"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:text="个性签名: "
                    android:textColor="#99CCFF"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_personnalinfo_sig1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/tv_personnalinfo_sig"
                    android:gravity="center"
                    android:text="XXX"
                    android:textColor="#646464"
                    android:textSize="17sp" />
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_me_editpassward"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_personnalinfo_changepassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingLeft="35dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:text="修改密码 "
                android:textColor="@color/text_redff"
                android:textSize="17sp" />
        </RelativeLayout>

    </LinearLayout>


</ScrollView>