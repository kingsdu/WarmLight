<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_readnews_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:background="@color/btn_gray"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/lv_read_smallnews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="3dp"
            android:src="@drawable/datetag" />

        <TextView
            android:id="@+id/tv_read_dividename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/lv_read_smallnews"
            android:layout_toRightOf="@id/lv_read_smallnews"
            android:textColor="@color/main_orange"
            android:textSize="14dp" />
    </LinearLayout>
</LinearLayout>